<%- contentFor('body') %>

<div class="row">
        <div class="col-md-6 text-center"> 
            <canvas id="myChart" width="400" height="400"></canvas>
        </div>
</div>
<br />
<div class="row ">
    <div class="col-md-12">
        <h1>Historico Movimentações</h1>

        <table class="table">
            <thead>
                <tr>
                <th scope="col">Tipo</th>
                <th scope="col">Categoria</th>
                <th scope="col">Valor</th>
                <th scope="col">Observacao</th>
                <th scope="col">Data</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((m) => { %>
                    <tr>
                        <td><%= m.tipo %></td>
                        <td><%= m.categoria %></td>
                        <td><%= m.valor %></td>
                        <td><%= m.observacao %></td>
                        <td><%= m.createdAt %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>   
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
<script>

    let data = JSON.parse('<%- JSON.stringify(historico) %>')

    var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Entrada','Saída'],
            datasets: [{
                label: '# Valor',
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
    
 </script>   


